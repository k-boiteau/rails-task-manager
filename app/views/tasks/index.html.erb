<h1> Here are your tasks:</h1>
<%=link_to "create task", new_task_path %>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%=link_to "task page", task_path(task) %>
  <%=link_to "modify task", edit_task_path(task) %>
  <%=link_to "destroy task", task_path(task), method: :delete %>
<% end %>
