<h1> Here are your tasks:</h1>
<%=link_to "create task", tasks_new_path %>

<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.description %></p>
  <%=link_to "task page", show_path(task) %>
  <%=link_to "modify task", edit_path(task) %>
  <%=link_to "destroy task", destroy_path(task), method: :delete %>
<% end %>
